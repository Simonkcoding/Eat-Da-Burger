<div class="row">
    <!-- Menu -->
    <div class="col-md-6">
        <div class="card">
            <ul>
                All you can eat burgers:
                <hr>
                {{#each meal}}
                {{#if devoured}}
                {{else}}
                <li> {{burger_name}} <button data-planid="{{id}}" class="del-btn btn btn-lg">Devour!</button></li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <!-- form-->
         <div class="card">
             Want a custom burger? Just tell us!
             <hr>
            <form action="/" method="POST">
                <textarea type="text" name="burgerName" style="width:80%"></textarea>
                <br>
                <button type="submit" class="btn btn-lg">Submit</button>
            </form>
            </div>
    </div>
    <!-- Sold -->
    <div class="col-md-6">
        <div class="card">
            <ul id="sold-list">
                Devoured Burgers:
                <hr>
                 {{#each meal}}
                {{#if devoured}}
                <li> {{burger_name}} </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <script>
        $(".del-btn").on("click", function (event) {
            var id = $(this).attr("data-planid")
            console.log(this.id)
            // Send the DELETE request.
            $.ajax("/burgers/" + id, {
                type: "PUT"
            }).then(
                function () {
                    // Reload the page to get the updated list
                    location.reload();
                });
           
        })


    </script>